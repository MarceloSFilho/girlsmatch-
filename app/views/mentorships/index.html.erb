

<%= form_with url: mentorships_path, method: :get, class: "d-flex" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a mentor or "
  %>
  <%= submit_tag "Search", class: "btn-default" %>
<% end %>

<% @mentors.each do |mentor| %>
<%= link_to mentor.username, user_path(mentor)  %>
<% end %>

<div>
  <% @mentors.each do |mentor| %>
    <div class='container'>
      <ul>
      <li><%= mentor.username  %></li>
      </ul>
      <% if mentor.available %>
      <%= link_to "Venha ser minha mentorada!", user_path(mentor) %>
      <% else %>
      <%= "NÃ£o estou disponivel no momento." %>
      <% end %>
    </div>
  <% end %>
</div>

