<div class="container">
  <h1 class="sign">USER PAGE</h1>

  <%= link_to "Choose a mentor", mentorships_path, class:"btn-default-big" %><br />
  <%= link_to "My proposals", my_proposals_path, class:"btn-default-big" %><br />
  <% if @user.skills.present? %>
  <ul>
  <% @user.skills.each do |skill| %>
  <li><%= skill.language %><%= button_to "delete skill", skill_path(skill), method: :delete %></li>
  <% end %>
  </ul>
  <% else %>
      <h2 class="sign">You do not have any skills set yet</h2>
  <% end %>

</div>
