<div class="container">
  <h2 class="sign">Entrar</h2>
  <div class="row">
    <div class="col-md-6">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password"} %>
          <%= f.input :remember_me, as: :boolean, class:"check-remember" if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Entrar", class:"btn-default" %>
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "Cadastro", new_registration_path(resource_name), class:"btn-default" %><br />
          <% end %>
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class:"btn-default-big" %><br />
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="col-md-6">
      <%= image_tag "cup.png", class:"cup" %>
    </div>
  </div>
  <%= render "devise/shared/links" %>
</div>
