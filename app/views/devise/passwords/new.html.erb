<div class="container">
  <h2 class="sign">Esqueceu sua senha?</h2>
    <div class="row">
      <div class="col-md-6">
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs mt-20px">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Recuperar senha", class:"btn-default-big" %>
          </div>
        <% end %>

      </div>
      <div class="col-md-6">
        <%= image_tag "senha.png", class:"img-senha" %>
      </div>
    </div>
  <%= render "devise/shared/links" %>
</div>
